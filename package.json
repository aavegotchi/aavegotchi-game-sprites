{
  "name": "gotchi-generator",
  "version": "1.0.0",
  "description": "Generate sprite sheets for Aavegotchis with viewer",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "author": "elitebr33d",
  "license": "MIT",
  "scripts": {
    "generate": "tsx src/generate_spritesheets.ts",
    "build": "tsup",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "tsup": "^8.2.4",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  }
}
